    // --- ENVOI D'EMAIL : CODE DE V√âRIFICATION (M√©thode non async) ---

    public void sendVerificationCodeEmail(String toEmail, String code) {

        MimeMessage mimeMessage = mailSender.createMimeMessage();
        MimeMessageHelper helper;

        try {
            helper = new MimeMessageHelper(mimeMessage, true);

            helper.setFrom(senderEmail, "L'√©quipe MyLB");
            helper.setTo(toEmail);

            helper.setSubject("Votre code de v√©rification de profil");

            String htmlContent = String.format(
                    "<!DOCTYPE html>" +
                            "<html>" +
                            // ... (HTML de v√©rification) ...
                            "<body>" +
                            // ... (Contenu de l'email) ...
                            "<div class=\"code-box\">%s</div>" +
                            // ...
                            "</body>" +
                            "</html>",
                    code
            );

            helper.setText(htmlContent, true);

            mailSender.send(mimeMessage);
            System.out.println("--- EMAIL V√âRIFICATION ENVOY√â R√âELLEMENT --- Code: " + code + " √†: " + toEmail);

        } catch (MessagingException | UnsupportedEncodingException e) {
            throw new RuntimeException("√âchec de l'envoi de l'email ou de la construction du message.", e);
        }
    }
}


